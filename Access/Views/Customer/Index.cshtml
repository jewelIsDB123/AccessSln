@model  PagedList.IPagedList<Access.Models.ViewModels.CustomerListViewModel>
@using PagedList.Mvc
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2 class="text-center">Customer Information</h2>
@Html.ActionLink("Add New Customer", "Create")
<div>
    @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
    {
        <p>
            Find By Customer Name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>}
    <br />
    <table class="table table-bordered">
        <tr>
            @*<th>CustomerId</th>*@
            <th>Customer Name</th>
            <th>Company</th>
            @*<th>Designation</th>
                <th>City</th>
                <th>Country</th>
                <th>Fax</th>
                <th>ActiveStatus</th>*@
            <th>Address</th>
            @*<th>Notes</th>*@
            <th>Email 01</th>
            @*<th>Email02</th>
                <th>Email03</th>
                <th>Email04</th>*@
            <th>Contact 01</th>
            @*<th>Contact02</th>
                <th>Contact03</th>
                <th>Contact04</th>*@
            <th>Action..</th>
        </tr>
        @foreach (var item in Model)
        {
<tr>
    @*<td>@Html.DisplayFor(modelItem => item.CustomerId)</td>*@
    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
    <td>@Html.DisplayFor(modelItem => item.Company)</td>
    @*<td>@Html.DisplayFor(modelItem => item.Designation)</td>
        <td>@Html.DisplayFor(modelItem => item.City)</td>
        <td>@Html.DisplayFor(modelItem => item.Country)</td>
        <td>@Html.DisplayFor(modelItem => item.Fax)</td>
        <td>@Html.DisplayFor(modelItem => item.ActiveStatus)</td>*@
    <td>@Html.DisplayFor(modelItem => item.Address)</td>
    @*<td>@Html.DisplayFor(modelItem => item.Notes)</td>*@
    <td>@Html.DisplayFor(modelItem => item.Email01)</td>
    @*<td>@Html.DisplayFor(modelItem => item.Email02)</td>
        <td>@Html.DisplayFor(modelItem => item.Email03)</td>
        <td>@Html.DisplayFor(modelItem => item.Email04)</td>*@
    <td>@Html.DisplayFor(modelItem => item.Contact01)</td>
    @*<td>@Html.DisplayFor(modelItem => item.Contact02)</td>
        <td>@Html.DisplayFor(modelItem => item.Contact03)</td>
        <td>@Html.DisplayFor(modelItem => item.Contact04)</td>*@
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId })|
        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId })|
    </td>
</tr>
}
    </table>
    <br />

    Page @(Model.PageCount<Model.PageNumber?0:Model.PageNumber) Of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

    <div id="partialDiv"></div>
    <script src="~/Scripts/details.js"></script> 


</div>